# Ralph Local Environment Variables
# Copy this to .env and fill in real values
# NEVER commit .env to git!

# Telegram Bot Token (get from @BotFather)
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Groq API Key (get from console.groq.com - FREE!)
GROQ_API_KEY=gsk_your_groq_api_key_here

# Optional: Ollama API for local AI models
# Install from: https://ollama.com
# Then: ollama pull phi3 (for 3B model)
OLLAMA_API_BASE=http://localhost:11434

# Optional: Tenor API Key for GIFs
TENOR_API_KEY=your_tenor_api_key_here

# Optional: Recipe API endpoint for cloud sync
RECIPE_API_BASE=https://ralphmode.com/api/recipes

# ===== FLASK WEBSITE =====

# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=development
SECRET_KEY=your_secret_key_here_generate_with_openssl_rand

# Database (MySQL)
DATABASE_URL=mysql+pymysql://user:password@localhost/ralphmode
DB_USER=ralphmode_user
DB_PASSWORD=your_db_password_here
DB_HOST=localhost
DB_NAME=ralphmode
DB_PORT=3306

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_DISCOVERY_URL=https://accounts.google.com/.well-known/openid-configuration

# Cloudflare
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token_here
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id_here
CLOUDFLARE_ZONE_ID=your_cloudflare_zone_id_here

# Session Security
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax
