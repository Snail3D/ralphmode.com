# Ralph Mode Configuration
# Copy this to .env and fill in your values

# Environment (development, staging, production)
RALPH_ENV=development

# SEC-016: Secrets Management
# Development: Uses environment variables (this file)
# Production: Uses HashiCorp Vault or AWS Secrets Manager
#
# To use Vault in production:
#   VAULT_ADDR=https://vault.example.com:8200
#   VAULT_TOKEN=your_vault_token
#
# To use AWS Secrets Manager in production:
#   AWS_REGION=us-east-1
#   AWS_ACCESS_KEY_ID=your_access_key_id
#   AWS_SECRET_ACCESS_KEY=your_secret_access_key

# SEC-007: Security Configuration
DEBUG=False
TESTING=False

# SEC-007: Secret Keys (generate with: python -c "import secrets; print(secrets.token_hex(32))")
# CRITICAL: Change these in production!
SECRET_KEY=your_secret_key_here_64_chars_minimum
SESSION_SECRET_KEY=your_session_secret_key_here_64_chars
CSRF_SECRET_KEY=your_csrf_secret_key_here_64_chars

# Telegram Bot Token (get from @BotFather)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Your Telegram user ID (get from @userinfobot)
TELEGRAM_ADMIN_ID=your_telegram_user_id_here

# Groq API Key (get from console.groq.com - FREE!)
GROQ_API_KEY=gsk_your_groq_api_key_here

# Optional: Claude API Key (for actual code changes)
ANTHROPIC_API_KEY=sk-ant-your_claude_key_here

# SEC-007: HTTPS Configuration
FORCE_HTTPS=True

# SEC-007: CORS Configuration
ALLOWED_ORIGINS=https://ralphmode.com,https://www.ralphmode.com

# Server Configuration
HOST=0.0.0.0
PORT=5000

# Logging
LOG_LEVEL=INFO
LOG_TO_STDOUT=True
