# SEC-015: Example Terraform Variables
# Copy this file to terraform.tfvars and customize

# Environment Configuration
environment = "production"
region      = "us-east-1"  # AWS region or Linode region

# Network Configuration
vpc_cidr              = "10.0.0.0/16"
public_subnet_cidr    = "10.0.1.0/24"
private_subnet_cidr   = "10.0.2.0/24"
database_subnet_cidr  = "10.0.3.0/24"

# IMPORTANT: Admin IP Configuration
# Replace 0.0.0.0/0 with your actual IP address for security
# Example: admin_ips = ["203.0.113.42/32"]
# Find your IP: curl ifconfig.me
admin_ips = [
  "0.0.0.0/0"  # ⚠️ INSECURE: Replace with your actual IP
]

# SSH Key Configuration
ssh_public_key_path = "~/.ssh/ralph-mode.pub"

# Instance Configuration
app_server_count      = 2
instance_type_app     = "t3.medium"   # AWS
instance_type_db      = "t3.small"    # AWS
instance_type_bastion = "t3.micro"    # AWS

# For Linode, use:
# instance_type_app     = "g6-standard-2"  # 4GB RAM
# instance_type_db      = "g6-standard-1"  # 2GB RAM
# instance_type_bastion = "g6-nanode-1"    # 1GB RAM

# Features
enable_nat_gateway = true
enable_monitoring  = true
enable_flow_logs   = true

# Ports
database_port = 5432  # PostgreSQL
redis_port    = 6379
app_port      = 8080

# Cloudflare IP Ranges (Update monthly from https://www.cloudflare.com/ips-v4)
cloudflare_ipv4_ranges = [
  "173.245.48.0/20",
  "103.21.244.0/22",
  "103.22.200.0/22",
  "103.31.4.0/22",
  "141.101.64.0/18",
  "108.162.192.0/18",
  "190.93.240.0/20",
  "188.114.96.0/20",
  "197.234.240.0/22",
  "198.41.128.0/17",
  "162.158.0.0/15",
  "104.16.0.0/13",
  "104.24.0.0/14",
  "172.64.0.0/13",
  "131.0.72.0/22"
]

# Tags
tags = {
  Project     = "Ralph Mode"
  ManagedBy   = "Terraform"
  SecurityReq = "SEC-015"
  Environment = "production"
}
